programa {
  funcao inicio() {
    inteiro numero_inteiro
  
  escreva ("Escreva um número inteiro: \n")
    leia (numero_inteiro)

      se (numero_inteiro > 0 e numero_inteiro % 2 == 0) 
{  
    escreva ("Esse número é par \n") 
